<h1>
  <%= @post.title %>
</h1>
<div>
  <%= simple_format @post.body %>
  <p>Posted <%= time_ago_in_words @post.created_at %> ago</p>
  <div class="">
    <%= link_to "Edit", edit_post_path(@post) %>
    <%= link_to "Delete", post_path(@post), method: :delete %>
    <%= link_to "Add comment", new_post_comment_path(@post) %>
  </div>
</div>


<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div class="comments">
    <%= simple_format comment.body %>
    <p>Made at <%= time_ago_in_words comment.created_at  %> ago</p>
    <%= link_to "Edit comment", edit_post_comment_path(@post, comment) %>
  </div>
<% end %>
